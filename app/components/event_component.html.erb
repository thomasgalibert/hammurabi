<li>
  <div class="relative pb-8">
    <span class="absolute left-4 top-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
    <div class="relative flex items-center space-x-3">
      <div><%= k(@event).badge %></div>
      <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
        <div>
          <p class="text-sm text-gray-500"><%= @event.title %></p>
        </div>
        <div class="whitespace-nowrap text-right text-sm text-gray-500">
          <time datetime="<%= @event.date %>"><%= l @event.date, format: :short %></time>
        </div>
      </div>
      
      <%= render DropdownComponent.new do %>
        <%= link_to t('todos.buttons.edit'), edit_dossier_event_path(@event.dossier, @event), class: "text-gray-700 block px-4 py-2 text-sm" %>
        <%= button_to t('todos.buttons.delete'), 
            dossier_event_path(@event.dossier, @event),
            method: :delete, 
            class: "text-gray-700 block px-4 py-2 text-sm" %>
      <% end %>
    </div>
  </div>
</li>