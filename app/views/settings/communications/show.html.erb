<%= render "settings/tabs", selected: "communication_setting" %>

<div class="overflow-hidden bg-white shadow sm:rounded-lg relative">

  <div class="px-4 py-6 sm:px-6">
    <h3 class="text-base font-semibold leading-7 text-gray-900"><%= t('firm_setting.communication_title') %></h3>
    <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500"><%= t('firm_setting.communication_subtitle') %></p>
  </div>
  <div class="border-t border-gray-100">
    <dl class="divide-y divide-gray-100">
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900"><%= t('firm_setting.communication_email') %></dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= current_user.communication_email %></dd>
      </div>

      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900"><%= t('firm_setting.accountant_share_link') %></dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
          <div><%= k(current_user).accountant_share_link %></div>

          <div class="mt-2">
            <%= button_to t('firm_setting.buttons.regenerate_accountant_link'),
                regenerate_accountant_token_settings_communication_path,
                method: :put,
                class: "text-stone-600 border px-2 py-1 border-stone-300 rounded-md bg-white hover:text-stone-800 hover:shadow-md" %>
          </div>
        </dd>
      </div>
    </dl>
  </div>
</div>
 

