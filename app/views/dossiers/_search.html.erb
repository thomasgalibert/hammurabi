<div class="relative flex items-center z-[100]" 
    data-controller="search"
    data-search-url-value="<%= searchs_globals_path %>"
    data-action="search:click:outside->search#close"
  >
  <input type="text" 
         name="search" 
         placeholder="rechercher dossier ou client" 
         id="search" 
         data-search-target="input"
         data-action="input->search#search"         
         class="block w-full rounded-md border-0 py-1.5 pr-14 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-emerald-600 sm:text-sm sm:leading-6">

  <div class="absolute inset-y-0 right-0 flex py-1.5 pr-1.5">
    <kbd class="inline-flex items-center rounded border border-gray-200 px-1 font-sans text-xs text-gray-400">⌘K</kbd>
  </div>

  <ul data-search-target="results" 
       class="bg-amber-50 absolute top-10 w-full rounded-md shadow-sm">
  </ul>
</div>