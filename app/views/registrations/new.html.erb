<h1><%= t 'registration.new.title' %></h1>

<%= form_with model: @user, url: registration_path do |form| %>
  <%= render "shared/errors", object: form.object %>
  
  <fieldset>
    <legend><%= t 'registration.new.legend' %></legend>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email, autofocus: true %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>
  </fieldset>

  <div class="form-footer"><%= form.submit %></div>

<% end %>