<%= form_with model: @user, url: password_reset_path(token: params[:token]), class: "max-w-3xl" do |form| %>
  <%= render "shared/errors", object: form.object %>
  
  <fieldset class="bg-white border rounded-md p-6 relative mt-10">
    <legend class="absolute -top-10 text-stone-500 text-lg"><%= t 'password_resets.edit.legend' %></legend>

    <div class="flex flex-col space-y-2 mb-6">
      <%= form.label :password, t('activerecord.attributes.user.new_password'), class: "block text-sm font-medium leading-6 text-stone-900" %>
      <%= form.password_field :password, class: "block w-full rounded-md border-0 py-1.5 text-stone-900 shadow-sm ring-1 ring-inset ring-stone-300 placeholder:text-stone-400 focus:ring-2 focus:ring-inset focus:ring-lime-600 sm:text-sm sm:leading-6" %>
    </div>
    <div class="flex flex-col space-y-2 mb-6">
      <%= form.label :password_confirmation, t('activerecord.attributes.user.new_password_confirmation'), class: "block text-sm font-medium leading-6 text-stone-900" %>
      <%= form.password_field :password_confirmation, class: "block w-full rounded-md border-0 py-1.5 text-stone-900 shadow-sm ring-1 ring-inset ring-stone-300 placeholder:text-stone-400 focus:ring-2 focus:ring-inset focus:ring-lime-600 sm:text-sm sm:leading-6" %>
    </div>
    
    <%= form.submit t('passwords.edit.submit'), class: "flex w-full justify-center rounded-md bg-lime-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-lime-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-lime-600" %>
  </fieldset>

<% end %>