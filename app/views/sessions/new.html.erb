<h1><%= t 'sessions.login' %></h1>

<%= form_with url: session_path do |form| %>
  <fieldset>
    <legend><%= t 'sessions.login_legend' %></legend>
    <div>
      <%= form.label :email, t('sessions.email') %>
      <%= form.email_field :email, autofocus: true %>
    </div>
    <div>
      <%= form.label :password, t('sessions.password') %>
      <%= form.password_field :password %>
    </div>
  </fieldset>

  <div class="form-footer"><%= form.submit t('sessions.submit') %></div>
<% end %>

<p><%= link_to t('sessions.forget_password'), new_password_reset_path %></p>