<% if flash[:notice] %>
  <div id="flash" data-turbo-temporary data-controller="flash" data-flash-target="flash" class="rounded-md bg-stone-800 border-emerald-300 border mt-4 p-4 relative">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-emerald-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-emerald-400"><%= t('flash.title.notice') %></h3>
        <div class="mt-2 text-sm text-emerald-300">
          <p><%= flash[:notice] %></p>
        </div>
      </div>
    </div>

    <div data-action="click->flash#close">
      <svg xmlns="http://www.w3.org/2000/svg" 
           fill="none" 
           viewBox="0 0 24 24" 
           stroke-width="1.5" 
           stroke="currentColor" 
           class="w-6 h-6 text-red-400 absolute font-black top-2 right-4 cursor-pointer">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </div>
  </div>
<% end %>

