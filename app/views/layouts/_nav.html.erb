<nav>

  <ul>
    <% if user_signed_in? %>
      <li><%= link_to t('sessions.edit_password'), edit_password_path %></li>
      <li><%= button_to t('sessions.logout'), session_path, method: :delete %></li>
    <% else %>
      <li><%= link_to t('sessions.login'), new_session_path %></li>
    <% end %>
  </ul>

  <ul>
    <li class="logo"><%= link_to "Hammurabi", root_path %></li>
  </ul>
  
  <ul>
    <li class="clock">
      <div id="date" class="mono"><%=l Date.today %></div>
      <div><%= render "shared/clock" %></div>
    </li>
  </ul>

</nav>